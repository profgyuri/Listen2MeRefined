<UserControl x:Class="Listen2MeRefined.WPF.HorizontalSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Listen2MeRefined.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Rectangle
        VerticalAlignment="Center"
        Height="1">
        <Rectangle.Fill>
            <RadialGradientBrush RadiusY="0.65">
                <GradientStop Color="{StaticResource SecondaryColor}" Offset="0.5"/>
                <GradientStop Color="{StaticResource PrimaryColor}" Offset="1"/>
            </RadialGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
