<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Palette based on: Crypto Prediction Market - Adobe Color -->
    <Color x:Key="PrimaryColor">#323240</Color><!-- 60% -->
    <Color x:Key="SecondaryColor">#52A7FF</Color><!-- 30% -->
    <Color x:Key="ThirnaryColor">#E8FF38</Color><!-- 10% -->
    <Color x:Key="ThirnaryMidColor">#687319</Color>
    <Color x:Key="ThirnaryDarkColor">#505328</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="ThirnaryBrush" Color="{StaticResource ThirnaryColor}" />
    <SolidColorBrush x:Key="ThirnaryMidBrush" Color="{StaticResource ThirnaryMidColor}" />
    <SolidColorBrush x:Key="ThirnaryDarkBrush" Color="{StaticResource ThirnaryDarkColor}" />
    <SolidColorBrush x:Key="HoloBackground" Color="{StaticResource PrimaryColor}" Opacity=".9" />
</ResourceDictionary>